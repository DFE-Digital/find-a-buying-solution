<% if @offers.present? %>
  <ul class="chevron-card-list govuk-!-margin-top-9">
    <% @offers.each do |offer| %>
      <li class="chevron-card">
        <div class="chevron-card__wrapper">
          <p class="govuk-body-m  govuk-!-margin-bottom-1 govuk-!-font-weight-bold">
            <%= govuk_link_to offer.title, offer_path(slug: offer.slug), class: "govuk-link chevron-card__link" %>
          </p>
          <p class="govuk-body-m chevron-card__description govuk-!-margin-top-2">
            <%= offer.description %>
          </p>
          <% if offer.expiry.present? %>
             <p class="expires govuk-secondary-text-colour">
              <%= t(".expires_on") %> <%= format_date(offer.expiry) %>
            </p>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
