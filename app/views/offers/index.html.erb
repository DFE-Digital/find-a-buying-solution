<% if @offers.present? %>
  <ul class="provider-expires chevron-card-list govuk-!-margin-top-9">
    <% @offers.each do |offer| %>
      <li class="chevron-card">
        <div class="chevron-card__wrapper">
          <p class="govuk-body-m  govuk-!-margin-bottom-1 govuk-!-font-weight-bold">
            <%= govuk_link_to offer.title, offer.url, class: "govuk-link chevron-card__link" %>
          </p>
          <p class="govuk-body-m chevron-card__description govuk-!-margin-top-2">
            <%= offer.description %>
          </p>
          <% if offer.expiry.present? %>
             <p class="expires govuk-body-s govuk-secondary-text-colour govuk-!-margin-top-2">
              <%= t(".expires_on") %> <%= format_date(offer.expiry) %>
            </p>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>

<% content_for :sidebar do %>
  <% link_struct = Struct.new(:link_text, :url) %>
  <% related_links = [
    link_struct.new("Things to consider when buying energy", "#"),
    link_struct.new("Get training on the Procurement Act 2023", "#")
  ] %>
  <%= render partial: "shared/related_content", locals: { related_content: related_links } %>
<% end %>
