<div class="page-header">
  <div class="dfe-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <%= govuk_back_link(href:  page_back_link ) %>
        <div><%= page_section_title %></div>
        <h2 class="govuk-heading"><%= page_title %></h2>
        <p>
          <%= page_description %>
        </p>
      </div>
    </div>
  </div>
</div>

<% if not yield.blank? %>
  <div class="page-with-sidebar">
    <div class="dfe-width-container">
      <div class="blue-line"></div>
      <div class="govuk-grid-column-two-thirds govuk-!-margin-top-7 govuk-!-margin-bottom-7">
        <%= yield %>
      </div>
      <div class="sidebar govuk-grid-column-one-third govuk-!-margin-top-7 govuk-!-margin-bottom-7">
        <h3> Related actions </h3>
        <p>
          <ul>
            <li><a href="\">Plan technology for your school</a></li>
            <li><a href="\">Read guidance on buying ICT</a></li>
            <li><a href="\">Read guidance on buying printing devices</a></li>
          </ul>
        </p>
        <h3> Catalogues </h3>
        <p>
          <ul>
            <li><a href="\">View Everything ICT catalogue</a></li>
          </ul>
        </p>
      </div>
    </div>
  </div>
<% end %>
