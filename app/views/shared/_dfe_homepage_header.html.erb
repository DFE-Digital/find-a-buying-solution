<header class="dfe-header govuk-!-padding-bottom-7" role="banner">
  <%= render "shared/dfe_logo_and_menu" %>
  <section class="dfe-page-hero">
    <div class="dfe-width-container hero-text-container">
      <div class="dfe-grid-row">
        <div class="dfe-grid-column-two-thirds">
          <h1 class="govuk-heading-xl">
            <%= ct('header_title') %>
          </h1>
          <p class="govuk-body-l">
            <%= ct('header_description') %>
          </p>
          <%= render "shared/dfe_search_homepage" %>
        </div>
      </div>
    </div>
  </section>
  <div class="dfe-width-container all-buying-options-link-container govuk-!-margin-top-4">
    <%= link_to  ct("shared.dfe_homepage_header.view_all_buying_options"), solutions_path, class:"all-buying-options-link govuk-body underlined" %>
  </div>
</header>
<%= render "shared/dfe_beta_banner" %>
