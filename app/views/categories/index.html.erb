<div class="govuk-!-margin-top-4">
  <h2 class="govuk-heading-m"><%= ct("categories.index.title") %></h2>
  <div class="dfe-grid-container">
    <% @categories.each do |category| %>
      <%= render "category", category: category %>
    <% end %>
  </div>
  <p class="govuk-body">
    <%= govuk_link_to ct("categories.index.procurement_support"), "https://www.get-help-buying-for-schools.service.gov.uk/procurement-support", target: "_blank", rel: "noopener noreferrer" %>
  </p>
  <% if @energy_banner %>
    <%= render partial: 'energy_banner', locals: { banner: @energy_banner } %>
  <% end %>
</div>
